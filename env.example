# =============================================================================
# CONFIGURATION ENVIRONNEMENT - ASSISTANTE BABOUNETTE
# =============================================================================

# =============================================================================
# BASE DE DONNÉES
# =============================================================================
# PostgreSQL avec extension pgvector
DATABASE_URL="postgresql://username:password@localhost:5432/babounette_db?schema=public"

# =============================================================================
# OPENAI API
# =============================================================================
# Clé API OpenAI pour GPT-4 et embeddings
OPENAI_API_KEY="sk-..."
# Modèle GPT principal (GPT-4 Turbo ou GPT-4.5-preview)
OPENAI_MODEL="gpt-4-turbo-preview"
# Modèle de fallback si limite de tokens atteinte
OPENAI_FALLBACK_MODEL="gpt-4-mini"
# Modèle d'embeddings pour RAG
OPENAI_EMBEDDING_MODEL="text-embedding-3-small"

# =============================================================================
# REDIS (Cache et Queue)
# =============================================================================
# URL Redis pour cache et queue d'embeddings
REDIS_URL="redis://localhost:6379"

# =============================================================================
# AUTHENTIFICATION
# =============================================================================
# NextAuth.js - Secret pour chiffrement des sessions
NEXTAUTH_SECRET="your-super-secret-key-here"
# URL de base de l'application
NEXTAUTH_URL="http://localhost:3000"

# =============================================================================
# PWA ET SERVICE WORKER
# =============================================================================
# URL de base pour les assets PWA
PWA_BASE_URL="https://babounette.app"
# Version du service worker pour cache busting
PWA_VERSION="1.0.0"

# =============================================================================
# MONITORING ET LOGS
# =============================================================================
# Sentry DSN pour monitoring d'erreurs
SENTRY_DSN=""
# Niveau de log (debug, info, warn, error)
LOG_LEVEL="info"

# =============================================================================
# NOTIFICATIONS PUSH
# =============================================================================
# Clé publique VAPID pour notifications push
VAPID_PUBLIC_KEY=""
# Clé privée VAPID pour notifications push
VAPID_PRIVATE_KEY=""

# =============================================================================
# ANALYTICS
# =============================================================================
# Google Analytics 4
GA_MEASUREMENT_ID=""
# Google Tag Manager
GTM_ID=""

# =============================================================================
# STORAGE ET FICHIERS
# =============================================================================
# Vercel Blob Storage (pour images et audio)
BLOB_READ_WRITE_TOKEN=""

# =============================================================================
# ENVIRONNEMENT
# =============================================================================
# Environnement de déploiement
NODE_ENV="development"
# Mode debug pour développement
DEBUG="false"

# =============================================================================
# RATE LIMITING
# =============================================================================
# Limite de requêtes par minute pour l'API
RATE_LIMIT_REQUESTS_PER_MINUTE="100"
# Limite de tokens OpenAI par utilisateur
OPENAI_RATE_LIMIT_TOKENS_PER_DAY="100000"

# =============================================================================
# FONCTIONNALITÉS EXPÉRIMENTALES
# =============================================================================
# Activer les fonctionnalités expérimentales
ENABLE_EXPERIMENTAL_FEATURES="false"
# Mode maintenance
MAINTENANCE_MODE="false" 